<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- App Logo -->
            <ImageView
                android:id="@+id/iv_app_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/icon"
                android:layout_marginBottom="16dp"
                android:contentDescription="Logo Aplikasi TimeBalance" />

            <!-- App Name -->
            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Balance"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:layout_marginBottom="8dp" />

            <!-- App Version -->
            <TextView
                android:id="@+id/tv_app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versi 2.0.0"
                android:textSize="14sp"
                android:textColor="@color/secondary_text_color"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- App Description Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tentang Aplikasi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_app_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TimeBalance adalah aplikasi manajemen waktu yang membantu Anda mengatur jadwal harian, mengelola tugas, dan menjaga keseimbangan antara pekerjaan dan kehidupan pribadi. Dengan fitur-fitur canggih dan interface yang user-friendly, TimeBalance memungkinkan Anda untuk lebih produktif dan terorganisir dalam menjalani aktivitas sehari-hari."
                    android:textSize="14sp"
                    android:textColor="@color/primary_text_color"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Developer Info Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developer Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="16dp" />

                <!-- Developer Photo and Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Developer Photo -->
                    <ImageView
                        android:id="@+id/iv_developer_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profile2"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounded_background"
                        android:scaleType="centerCrop"
                        android:contentDescription="Foto Developer" />

                    <!-- Developer Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_developer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adinda Aprilia Wahyu P.P"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text_color"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_student_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: 231111015"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text_color"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/tv_study_program"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S1 Informatika"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text_color" />

                    </LinearLayout>

                </LinearLayout>

                <!-- University Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_university_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/logo_ubhinus"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Logo Universitas"
                        android:scaleType="fitCenter" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_university_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Universitas Bhinneka Nusantara"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text_color"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Malang, Jawa Timur"
                            android:textSize="12sp"
                            android:textColor="@color/secondary_text_color" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Copyright -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 Time Balance"
                android:textSize="12sp"
                android:textColor="@color/secondary_text_color"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dikembangkan dengan ❤️ untuk produktivitas yang lebih baik"
                android:textSize="12sp"
                android:textColor="@color/secondary_text_color"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>